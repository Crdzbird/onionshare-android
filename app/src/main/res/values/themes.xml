<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Can add things for higher API levels here. -->
    </style>

    <style name="Theme.OnionShare" parent="Theme.BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_onion_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_onion_light</item>
    </style>

    <style name="Theme.OnionShare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OnionShare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OnionShare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
